<%- include("./partials/header"); -%>
<title>Edit Movies</title>

<div class="content">
  <h1 class="heading"><%= title %></h1>
  <p class="description">Edit Movie Rating</p>
  <form method="post" action="/edit/<%= title %>">
    <input
      type="text"
      id="rating"
      placeholder="your rating"
      name="rating"
      autofocus
    />
    <br /><br />
    <input
      type="text"
      id="review"
      placeholder="your review"
      name="review"
      autofocus
    />
    <br /><br />
    <input class="btn btn-primary btn-md" value="Update" type="submit" />
  </form>
</div>
<%- include("./partials/footer"); -%>
